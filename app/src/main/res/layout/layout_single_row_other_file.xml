<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_100sdp"
        android:layout_marginRight="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@drawable/red_stroke"
        android:minHeight="@dimen/_100sdp">

        <LinearLayout
            android:id="@+id/ll_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_quote_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageView
                android:id="@+id/iv_quote_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_quote"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="(Forwarded)"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_file"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:gravity="start"
                android:scaleType="centerCrop"
                android:padding="@dimen/_5sdp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/ic_download"/>

    </RelativeLayout>
</layout>