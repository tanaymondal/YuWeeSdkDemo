<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/red_stroke"
        android:layout_marginEnd="@dimen/_100sdp"
        android:layout_marginRight="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/ll_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:background="@drawable/grey_bg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_quote_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="" />

            <ImageView
                android:id="@+id/iv_quote_image"
                android:visibility="gone"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_quote"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/grey_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="(Forwarded)"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_80sdp"
                android:gravity="start"
                android:minWidth="@dimen/_60sdp"
                android:padding="@dimen/_4sdp"
                android:text="hello boss"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>
</layout>